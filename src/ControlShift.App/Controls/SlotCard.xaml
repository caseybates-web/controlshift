<UserControl
    x:Class="ControlShift.App.Controls.SlotCard"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Minimal Xbox-style controller card -->
    <Border x:Name="CardBorder"
            Background="{StaticResource CsSurfaceBrush}"
            CornerRadius="10"
            Padding="16" MinHeight="72">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <!-- Slot badge (P1â€“P4) -->
            <Border x:Name="SlotBadgeBorder" Grid.Column="0"
                    Background="{StaticResource CsAccentBrush}"
                    CornerRadius="8" Width="32" Height="32"
                    VerticalAlignment="Center" Margin="0,0,14,0">
                <TextBlock x:Name="SlotBadge" Text="P1"
                           FontSize="13" FontWeight="Bold"
                           Foreground="White"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center" />
            </Border>

            <!-- Device info -->
            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                <TextBlock x:Name="DeviceName" Text="No controller"
                           FontSize="14" FontWeight="Medium"
                           Foreground="{StaticResource CsTextPrimaryBrush}"
                           TextTrimming="CharacterEllipsis" />

                <TextBlock x:Name="DeviceSub" Text=""
                           FontSize="11"
                           Foreground="#666666"
                           Margin="0,2,0,0"
                           Visibility="Collapsed" />
            </StackPanel>

            <!-- Battery icon (Segoe Fluent Icons glyph) -->
            <TextBlock x:Name="BatteryIcon" Grid.Column="2"
                       Text=""
                       FontFamily="Segoe Fluent Icons"
                       FontSize="20"
                       Foreground="#888888"
                       VerticalAlignment="Center"
                       Margin="8,0,0,0" />
        </Grid>
    </Border>
</UserControl>
