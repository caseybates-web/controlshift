<Window
    x:Class="ControlShift.App.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="ControlShift">

    <Grid Background="{StaticResource CsBackgroundBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Grid.Row="0" Padding="20,20,20,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                <TextBlock Text="ControlShift"
                           FontSize="18" FontWeight="SemiBold"
                           Foreground="{StaticResource CsTextPrimaryBrush}"
                           VerticalAlignment="Center" />
                <TextBlock Text="v0.1"
                           FontSize="10" Opacity="0.4"
                           Foreground="{StaticResource CsTextSecondaryBrush}"
                           VerticalAlignment="Center"
                           Margin="8,0,0,0" />
            </StackPanel>

            <Button Grid.Column="1"
                    Background="Transparent" BorderThickness="0"
                    ToolTipService.ToolTip="Settings"
                    Padding="8" CornerRadius="6"
                    VerticalAlignment="Center">
                <TextBlock Text="&#xE713;"
                           FontFamily="Segoe Fluent Icons" FontSize="14"
                           Foreground="#666666" />
            </Button>
        </Grid>

        <!-- Controller slot cards -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto"
                      Padding="20,20,20,0">
            <StackPanel x:Name="SlotPanel" Spacing="8">
                <!-- Populated programmatically -->
            </StackPanel>
        </ScrollViewer>

        <!-- Status bar -->
        <Grid Grid.Row="2" Padding="20,16,20,16"
              BorderBrush="#222222" BorderThickness="0,1,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                <Ellipse x:Name="StatusDot" Width="6" Height="6"
                         Fill="{StaticResource CsAccentBrush}" Margin="0,0,8,0" />
                <TextBlock x:Name="StatusText" Text="Ready"
                           FontSize="12"
                           Foreground="#666666" />
            </StackPanel>

            <Button Grid.Column="1" x:Name="RefreshButton"
                    Click="RefreshButton_Click"
                    Background="Transparent"
                    BorderBrush="#333333" BorderThickness="1"
                    Foreground="#999999"
                    Padding="14,6" CornerRadius="8">
                <StackPanel Orientation="Horizontal" Spacing="6">
                    <TextBlock Text="&#xE72C;"
                               FontFamily="Segoe Fluent Icons" FontSize="12"
                               VerticalAlignment="Center" />
                    <TextBlock Text="Refresh" FontSize="12"
                               VerticalAlignment="Center" />
                </StackPanel>
            </Button>
        </Grid>
    </Grid>
</Window>
