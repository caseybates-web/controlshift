<Window
    x:Class="ControlShift.App.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="ControlShift">

    <Grid x:Name="ContentGrid"
          Background="{StaticResource XbBackgroundBrush}"
          KeyDown="ContentGrid_KeyDown">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Header: title left, version right -->
        <Grid Grid.Row="0" Padding="20,20,20,14">
            <TextBlock Text="ControlShift"
                       FontFamily="Segoe UI" FontSize="18" FontWeight="Bold"
                       Foreground="{StaticResource XbTextBrush}"
                       HorizontalAlignment="Left" VerticalAlignment="Center" />
            <TextBlock Text="v0.2"
                       FontFamily="Segoe UI" FontSize="11"
                       Foreground="{StaticResource XbTextMutedBrush}"
                       HorizontalAlignment="Right" VerticalAlignment="Center" />
        </Grid>

        <!-- Scrollable card list -->
        <!-- Padding="16,6" gives 6px top/bottom clearance inside the viewport so
             the scale-swell on the first/last card is not clipped by ScrollViewer. -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="16,6,16,6">
            <StackPanel Spacing="0">

                <!-- Spacing="0" â€” gap comes from each SlotCard's Margin (4px top + 4px bottom
                     = 8px between card surfaces); 8px sides give the swell room to expand. -->
                <StackPanel x:Name="SlotPanel" Spacing="0" />

                <!-- UNASSIGNED section: hidden until Core surfaces unmatched HID devices -->
                <TextBlock x:Name="UnassignedHeader"
                           Text="UNASSIGNED"
                           FontFamily="Segoe UI" FontSize="10" FontWeight="SemiBold"
                           Foreground="{StaticResource XbTextMutedBrush}"
                           Margin="4,20,0,8"
                           Visibility="Collapsed" />
                <StackPanel x:Name="UnassignedPanel" Spacing="8" Visibility="Collapsed" />

            </StackPanel>
        </ScrollViewer>

        <!-- Footer -->
        <Grid Grid.Row="2" Padding="20,14,20,18">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <TextBlock x:Name="StatusText" Grid.Column="0"
                       Text="Scanning..."
                       FontFamily="Segoe UI" FontSize="12"
                       Foreground="{StaticResource XbTextMutedBrush}"
                       VerticalAlignment="Center" />

            <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="8">
                <Button x:Name="RevertButton"
                        Content="Revert All" Click="RevertButton_Click"
                        Background="#C42B1C"
                        Foreground="{StaticResource XbTextBrush}"
                        BorderThickness="0"
                        FontFamily="Segoe UI" FontSize="12" FontWeight="SemiBold"
                        Padding="16,8" CornerRadius="2"
                        Visibility="Collapsed" />

                <Button x:Name="RefreshButton"
                        Content="Refresh" Click="RefreshButton_Click"
                        Background="{StaticResource XbAccentBrush}"
                        Foreground="{StaticResource XbTextBrush}"
                        BorderThickness="0"
                        FontFamily="Segoe UI" FontSize="12" FontWeight="SemiBold"
                        Padding="16,8" CornerRadius="2" />
            </StackPanel>
        </Grid>
    </Grid>
</Window>
