<Window
    x:Class="ControlShift.App.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="ControlShift">

    <Grid Background="{StaticResource XbBackgroundBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Grid.Row="0" Padding="20,18,20,14">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <TextBlock Text="ControlShift"
                           FontFamily="Segoe UI" FontSize="20" FontWeight="Bold"
                           Foreground="{StaticResource XbTextBrush}" />
                <TextBlock Text="v0.1"
                           FontFamily="Segoe UI" FontSize="11" Margin="8,7,0,0"
                           Foreground="{StaticResource XbTextMutedBrush}" />
            </StackPanel>
        </Grid>

        <!-- Controller slot cards -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="20,0,20,0">
            <StackPanel x:Name="SlotPanel" Spacing="8" />
        </ScrollViewer>

        <!-- Footer -->
        <Grid Grid.Row="2" Padding="20,14,20,18">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <TextBlock x:Name="StatusText" Grid.Column="0"
                       Text="Scanning..."
                       FontFamily="Segoe UI" FontSize="12"
                       Foreground="{StaticResource XbTextMutedBrush}"
                       VerticalAlignment="Center" />

            <Button Grid.Column="1" x:Name="RefreshButton"
                    Content="Refresh" Click="RefreshButton_Click"
                    Background="{StaticResource XbAccentBrush}"
                    Foreground="{StaticResource XbTextBrush}"
                    BorderThickness="0"
                    FontFamily="Segoe UI" FontSize="12" FontWeight="SemiBold"
                    Padding="16,8" CornerRadius="2" />
        </Grid>
    </Grid>
</Window>
