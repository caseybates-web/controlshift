<Window
    x:Class="ControlShift.App.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="ControlShift">

    <Grid x:Name="ContentGrid"
          Background="Transparent"
          KeyDown="ContentGrid_KeyDown">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Header: title left, version right -->
        <Grid Grid.Row="0" Padding="20,20,20,14">
            <TextBlock Text="ControlShift"
                       FontFamily="Segoe UI" FontSize="18" FontWeight="Bold"
                       Foreground="{StaticResource XbTextBrush}"
                       HorizontalAlignment="Left" VerticalAlignment="Center" />
            <TextBlock Text="v0.2"
                       FontFamily="Segoe UI" FontSize="11"
                       Foreground="{StaticResource XbTextMutedBrush}"
                       HorizontalAlignment="Right" VerticalAlignment="Center" />
        </Grid>

        <!-- Scrollable card list -->
        <!-- Padding="16,6" gives 6px top/bottom clearance inside the viewport so
             the scale-swell on the first/last card is not clipped by ScrollViewer. -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="16,6,16,6">
            <StackPanel Spacing="0">

                <!-- Spacing="0" â€” gap comes from each SlotCard's Margin (4px top + 4px bottom
                     = 8px between card surfaces); 8px sides give the swell room to expand. -->
                <StackPanel x:Name="SlotPanel" Spacing="0" />

                <!-- UNASSIGNED section: hidden until Core surfaces unmatched HID devices -->
                <TextBlock x:Name="UnassignedHeader"
                           Text="UNASSIGNED"
                           FontFamily="Segoe UI" FontSize="10" FontWeight="SemiBold"
                           Foreground="{StaticResource XbTextMutedBrush}"
                           Margin="4,20,0,8"
                           Visibility="Collapsed" />
                <StackPanel x:Name="UnassignedPanel" Spacing="8" Visibility="Collapsed" />

            </StackPanel>
        </ScrollViewer>

        <!-- Exit link -->
        <HyperlinkButton Grid.Row="2"
                         Content="Exit ControlShift"
                         HorizontalAlignment="Center"
                         Padding="16,14,16,20"
                         Foreground="{StaticResource XbTextMutedBrush}"
                         Click="ExitButton_Click" />
    </Grid>
</Window>
