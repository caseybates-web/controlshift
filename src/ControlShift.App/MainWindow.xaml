<Window
    x:Class="ControlShift.App.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="ControlShift">

    <Grid x:Name="ContentGrid"
          Background="{StaticResource XbBackgroundBrush}"
          KeyDown="ContentGrid_KeyDown">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Header: title left, full-screen toggle + version right -->
        <Grid x:Name="HeaderGrid" Grid.Row="0" Padding="20,20,20,14">
            <TextBlock x:Name="HeaderTitle" Text="ControlShift"
                       FontFamily="Segoe UI" FontSize="18" FontWeight="Bold"
                       Foreground="{StaticResource XbTextBrush}"
                       HorizontalAlignment="Left" VerticalAlignment="Center" />
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center" Spacing="12">
                <Button x:Name="FullScreenToggle"
                        Content="&#xE740;"
                        FontFamily="Segoe MDL2 Assets"
                        Padding="6,4"
                        FontSize="14"
                        Background="#2D2D2D"
                        Foreground="{StaticResource XbTextMutedBrush}"
                        BorderThickness="1"
                        BorderBrush="#404040"
                        CornerRadius="2"
                        Click="FullScreenToggle_Click"
                        ToolTipService.ToolTip="Toggle full-screen (F11)" />
                <TextBlock x:Name="HeaderVersion" Text="v0.3"
                           FontFamily="Segoe UI" FontSize="11"
                           Foreground="{StaticResource XbTextMutedBrush}"
                           VerticalAlignment="Center" />
            </StackPanel>
        </Grid>

        <!-- Scrollable card list -->
        <!-- Padding="16,6" gives 6px top/bottom clearance inside the viewport so
             the scale-swell on the first/last card is not clipped by ScrollViewer. -->
        <ScrollViewer x:Name="CardScrollViewer" Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="16,6,16,6">
            <StackPanel Spacing="0">

                <!-- Cards panel: Grid with dynamic row/column definitions set in code-behind.
                     Handheld = single column (mimics StackPanel); full-screen = horizontal row. -->
                <Grid x:Name="SlotPanel"
                      XYFocusKeyboardNavigation="Disabled" />

                <!-- UNASSIGNED section: hidden until Core surfaces unmatched HID devices -->
                <TextBlock x:Name="UnassignedHeader"
                           Text="UNASSIGNED"
                           FontFamily="Segoe UI" FontSize="10" FontWeight="SemiBold"
                           Foreground="{StaticResource XbTextMutedBrush}"
                           Margin="4,20,0,8"
                           Visibility="Collapsed" />
                <StackPanel x:Name="UnassignedPanel" Spacing="8" Visibility="Collapsed" />

            </StackPanel>
        </ScrollViewer>

        <!-- Footer: Revert All + Exit -->
        <StackPanel x:Name="FooterPanel" Grid.Row="2" HorizontalAlignment="Center" Spacing="4" Padding="0,8,0,0">
            <Button x:Name="RevertButton"
                    Content="Revert All"
                    HorizontalAlignment="Center"
                    Padding="16,8"
                    Background="#107C10"
                    Foreground="White"
                    CornerRadius="2"
                    Visibility="Collapsed"
                    Click="RevertButton_Click" />
            <Button x:Name="ExitButton"
                    Content="Exit ControlShift"
                    HorizontalAlignment="Center"
                    Padding="16,10,16,16"
                    Background="Transparent"
                    Foreground="{StaticResource XbTextMutedBrush}"
                    BorderThickness="0"
                    CornerRadius="2"
                    Click="ExitButton_Click" />
        </StackPanel>
    </Grid>
</Window>
