<Window
    x:Class="ControlShift.App.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="ControlShift">

    <Grid Background="{StaticResource CsBackgroundBrush}" Padding="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Header bar -->
        <Grid Grid.Row="0" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                <!-- Xbox-style controller icon -->
                <TextBlock Text="&#xE7FC;"
                           FontFamily="Segoe Fluent Icons" FontSize="22"
                           Foreground="{StaticResource CsAccentBrush}"
                           VerticalAlignment="Center" Margin="0,0,10,0" />
                <TextBlock Text="ControlShift"
                           FontSize="20" FontWeight="Bold"
                           Foreground="{StaticResource CsTextPrimaryBrush}"
                           VerticalAlignment="Center" />
                <TextBlock Text="v0.1"
                           FontSize="10" Margin="8,8,0,0" Opacity="0.5"
                           Foreground="{StaticResource CsTextSecondaryBrush}" />
            </StackPanel>

            <!-- Settings gear icon button -->
            <Button Grid.Column="1"
                    Background="Transparent" BorderThickness="0"
                    ToolTipService.ToolTip="Settings"
                    Padding="10" CornerRadius="20"
                    VerticalAlignment="Center">
                <TextBlock Text="&#xE713;"
                           FontFamily="Segoe Fluent Icons" FontSize="16"
                           Foreground="{StaticResource CsTextSecondaryBrush}" />
            </Button>
        </Grid>

        <!-- Section label -->
        <TextBlock Grid.Row="1" Text="CONTROLLERS"
                   FontSize="11" FontWeight="SemiBold"
                   Foreground="{StaticResource CsTextSecondaryBrush}"
                   CharacterSpacing="80"
                   Margin="4,0,0,10" />

        <!-- Controller slot cards (P1â€“P4) -->
        <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
            <StackPanel x:Name="SlotPanel" Spacing="10">
                <!-- Slot cards are populated programmatically in code-behind -->
            </StackPanel>
        </ScrollViewer>

        <!-- Bottom status bar -->
        <Grid Grid.Row="3" Margin="0,16,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                <Ellipse x:Name="StatusDot" Width="8" Height="8"
                         Fill="{StaticResource CsAccentBrush}" Margin="0,0,8,0" />
                <TextBlock x:Name="StatusText" Text="Ready"
                           FontSize="11"
                           Foreground="{StaticResource CsTextSecondaryBrush}" />
            </StackPanel>

            <!-- Xbox-style pill refresh button -->
            <Button Grid.Column="1" x:Name="RefreshButton"
                    Click="RefreshButton_Click"
                    Background="{StaticResource CsAccentBrush}"
                    Foreground="White" BorderThickness="0"
                    Padding="16,8" CornerRadius="16">
                <StackPanel Orientation="Horizontal" Spacing="6">
                    <TextBlock Text="&#xE72C;"
                               FontFamily="Segoe Fluent Icons" FontSize="12"
                               VerticalAlignment="Center" />
                    <TextBlock Text="Refresh" FontSize="12"
                               VerticalAlignment="Center" />
                </StackPanel>
            </Button>
        </Grid>
    </Grid>
</Window>
