<Application
    x:Class="ControlShift.App.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ControlShift.App">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <XamlControlsResources xmlns="using:Microsoft.UI.Xaml.Controls" />
            </ResourceDictionary.MergedDictionaries>

            <!-- ControlShift â€” minimal Xbox dark palette -->
            <Color x:Key="CsBackground">#1A1A1A</Color>
            <Color x:Key="CsSurface">#242424</Color>
            <Color x:Key="CsAccent">#107C10</Color>
            <Color x:Key="CsTextPrimary">#FFFFFF</Color>
            <Color x:Key="CsTextSecondary">#9E9E9E</Color>

            <SolidColorBrush x:Key="CsBackgroundBrush" Color="{StaticResource CsBackground}" />
            <SolidColorBrush x:Key="CsSurfaceBrush" Color="{StaticResource CsSurface}" />
            <SolidColorBrush x:Key="CsAccentBrush" Color="{StaticResource CsAccent}" />
            <SolidColorBrush x:Key="CsTextPrimaryBrush" Color="{StaticResource CsTextPrimary}" />
            <SolidColorBrush x:Key="CsTextSecondaryBrush" Color="{StaticResource CsTextSecondary}" />
        </ResourceDictionary>
    </Application.Resources>
</Application>
