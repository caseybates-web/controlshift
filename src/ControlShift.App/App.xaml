<Application
    x:Class="ControlShift.App.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ControlShift.App">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <XamlControlsResources xmlns="using:Microsoft.UI.Xaml.Controls" />
            </ResourceDictionary.MergedDictionaries>

            <!-- ControlShift dark theme palette (from PRD) -->
            <Color x:Key="CsBackground">#0F172A</Color>
            <Color x:Key="CsCardBackground">#1E293B</Color>
            <Color x:Key="CsAccent">#00E5FF</Color>
            <Color x:Key="CsTextPrimary">#F8FAFC</Color>
            <Color x:Key="CsTextSecondary">#94A3B8</Color>
            <Color x:Key="CsBorderColor">#334155</Color>
            <Color x:Key="CsWarning">#F59E0B</Color>

            <SolidColorBrush x:Key="CsBackgroundBrush" Color="{StaticResource CsBackground}" />
            <SolidColorBrush x:Key="CsCardBackgroundBrush" Color="{StaticResource CsCardBackground}" />
            <SolidColorBrush x:Key="CsAccentBrush" Color="{StaticResource CsAccent}" />
            <SolidColorBrush x:Key="CsTextPrimaryBrush" Color="{StaticResource CsTextPrimary}" />
            <SolidColorBrush x:Key="CsTextSecondaryBrush" Color="{StaticResource CsTextSecondary}" />
            <SolidColorBrush x:Key="CsBorderBrush" Color="{StaticResource CsBorderColor}" />
            <SolidColorBrush x:Key="CsWarningBrush" Color="{StaticResource CsWarning}" />
        </ResourceDictionary>
    </Application.Resources>
</Application>
