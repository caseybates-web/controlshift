<Application
    x:Class="ControlShift.App.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ControlShift.App">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <XamlControlsResources xmlns="using:Microsoft.UI.Xaml.Controls" />
            </ResourceDictionary.MergedDictionaries>

            <!-- Xbox design tokens -->
            <Color x:Key="XbBackground">#1A1A1A</Color>
            <Color x:Key="XbCard">#2D2D2D</Color>
            <Color x:Key="XbAccent">#107C10</Color>
            <Color x:Key="XbText">#FFFFFF</Color>
            <Color x:Key="XbTextMuted">#ABABAB</Color>
            <Color x:Key="XbBorder">#404040</Color>

            <SolidColorBrush x:Key="XbBackgroundBrush" Color="{StaticResource XbBackground}" />
            <SolidColorBrush x:Key="XbCardBrush"       Color="{StaticResource XbCard}" />
            <SolidColorBrush x:Key="XbAccentBrush"     Color="{StaticResource XbAccent}" />
            <SolidColorBrush x:Key="XbTextBrush"       Color="{StaticResource XbText}" />
            <SolidColorBrush x:Key="XbTextMutedBrush"  Color="{StaticResource XbTextMuted}" />
            <SolidColorBrush x:Key="XbBorderBrush"     Color="{StaticResource XbBorder}" />
        </ResourceDictionary>
    </Application.Resources>
</Application>
