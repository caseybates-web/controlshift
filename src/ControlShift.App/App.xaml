<Application
    x:Class="ControlShift.App.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ControlShift.App">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <XamlControlsResources xmlns="using:Microsoft.UI.Xaml.Controls" />
            </ResourceDictionary.MergedDictionaries>

            <!-- ControlShift Xbox-inspired dark theme palette -->
            <Color x:Key="CsBackground">#1A1A1A</Color>
            <Color x:Key="CsCardBackground">#2D2D2D</Color>
            <Color x:Key="CsAccent">#107C10</Color>
            <Color x:Key="CsAccentLight">#9BF00B</Color>
            <Color x:Key="CsTextPrimary">#FFFFFF</Color>
            <Color x:Key="CsTextSecondary">#9E9E9E</Color>
            <Color x:Key="CsBorderColor">#3D3D3D</Color>
            <Color x:Key="CsWarning">#F59E0B</Color>
            <Color x:Key="CsCardHover">#383838</Color>
            <Color x:Key="CsSurface">#242424</Color>
            <Color x:Key="CsBatteryRed">#E74856</Color>

            <SolidColorBrush x:Key="CsBackgroundBrush" Color="{StaticResource CsBackground}" />
            <SolidColorBrush x:Key="CsCardBackgroundBrush" Color="{StaticResource CsCardBackground}" />
            <SolidColorBrush x:Key="CsAccentBrush" Color="{StaticResource CsAccent}" />
            <SolidColorBrush x:Key="CsAccentLightBrush" Color="{StaticResource CsAccentLight}" />
            <SolidColorBrush x:Key="CsTextPrimaryBrush" Color="{StaticResource CsTextPrimary}" />
            <SolidColorBrush x:Key="CsTextSecondaryBrush" Color="{StaticResource CsTextSecondary}" />
            <SolidColorBrush x:Key="CsBorderBrush" Color="{StaticResource CsBorderColor}" />
            <SolidColorBrush x:Key="CsWarningBrush" Color="{StaticResource CsWarning}" />
            <SolidColorBrush x:Key="CsCardHoverBrush" Color="{StaticResource CsCardHover}" />
            <SolidColorBrush x:Key="CsSurfaceBrush" Color="{StaticResource CsSurface}" />
            <SolidColorBrush x:Key="CsBatteryRedBrush" Color="{StaticResource CsBatteryRed}" />
        </ResourceDictionary>
    </Application.Resources>
</Application>
