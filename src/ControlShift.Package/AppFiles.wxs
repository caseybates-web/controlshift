<?xml version="1.0" encoding="utf-8"?>

<!--
  File harvest for the ControlShift application.
  Uses WiX 4's Files element to automatically include all published files.
  The publish output directory is specified during build via -d:PublishDir=...
-->

<Wix xmlns="http://wixtoolset.org/schemas/v4/wxs">

  <Fragment>
    <ComponentGroup Id="AppFiles" Directory="INSTALLFOLDER">
      <Files Include="$(var.PublishDir)\**" />
    </ComponentGroup>
  </Fragment>

</Wix>
