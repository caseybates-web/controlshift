<Project Sdk="WixToolset.Sdk/4.0.4">

  <!--
    DECISION: WiX 4 Burn bootstrapper bundles ViGEmBus + HidHide (Permanent=yes,
    not removed on uninstall per CLAUDE.md) and the ControlShift MSI.
    Build with: dotnet tool install - -global wix && dotnet build
    Requires the MSI to be built first (handled by ProjectReference).
    Requires the app to be published first:
      dotnet publish src/ControlShift.App -c Release -r win-x64 - -self-contained -o publish/
  -->

  <PropertyGroup>
    <OutputType>Bundle</OutputType>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="WixToolset.Bal.wixext" Version="4.0.4" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\ControlShift.Package\ControlShift.Package.wixproj" />
  </ItemGroup>

</Project>
